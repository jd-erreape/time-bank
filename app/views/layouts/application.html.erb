<!DOCTYPE html>
<html>
<head>
  <title>TimeBank</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class='main-header'>
  <section class='main-title'>
    <h1>Time Bank</h1>
  </section>
  <%= render :partial => 'layouts/dashboard/login' %>
</header>

<section class='main-section'>

  <section class='main-column external-favors'>
    <%= render :partial => 'layouts/dashboard/external_favors' %>
    <%= yield %>
  </section>

  <section class='main-column internal-favors'>
    <%= render :partial => 'layouts/dashboard/internal_favors' %>
  </section>

</section>

</body>
</html>
